@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>_Student</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Student</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <title>_Student</title>
    <style>
        body {
            background-color: #F2F4F4;
            height: 100%;
        }

        .circle-passed {
            display: block;
            background: Green;
            border-radius: 50%;
            height: 15px;
            width: 15px;
            margin: 0;
        }

        .circle-not-passed {
            display: block;
            background: #7E3117;
            border-radius: 50%;
            height: 15px;
            width: 15px;
            margin: 0;
        }

        .first-letter {
            font-size: 15px;
            line-height: 25px;
            font-weight: bold;
            color: black;
        }

        .btn1 {
            background-color: #25587E;
            width: 150px;
            color: white;
            border: 1px solid #25587E;
        }

        .btn1:disabled {
            background-color: #25587E;
            color: white;
            border: 1px solid #25587E;
        }

        .btn1:hover {
            background-color: #25587E;
            color: white;
            border: 1px solid #25587E;
        }

        .btn2 {
            background-color: #25383C;
            width: 280px;
            color: white;
            border: 1px solid #25383C;
        }

        .btn2:disabled {
            background-color: #25383C;
            color: white;
            border: 1px solid #25383C;
        }

        .btn2:hover {
            background-color: #4C7D7E;
            color: white;
            border: 1px solid #4C7D7E;
        }

        .td {
            border-left-style: solid;
            border-left-color: #25587E;
            border-left-width: 12px;
            line-height: 0.5;
        }

        .td1 {
            line-height: 0.5;
        }

        .th1 {
            line-height: 0.5;
        }

        .a {
            font-size: 12pt;
            color: black;
        }

        .aheader {
            font-size: 12pt;
            color: black;
        }

        .aheader:hover {
            text-decoration: underline;
            color: black;
        }

        .a:hover {
            text-decoration-line: none;
            text-decoration: none;
            color: white;
        }

        .tr:hover {
            background-color: #25587E;
            color: white;
        }

        tr:hover td > a {
            background-color: #25587E;
            color: white;
            font-size: 12pt;
        }

        .a-secretary {
            text-decoration: none;
            color: red;
        }

        .a-secretary:hover {
            text-decoration-color: red;
            color: red;
        }

        .a-booklet {
            color: #25587E;
        }

        .a-booklet:hover {
            text-decoration: underline;
            color: #25587E
        }

        .a-link {
            color: red;
            font-weight: bold;
        }

        .a-link:hover {
            text-decoration: underline;
            color: #616D7E
        }

        .page-item.active .page-link {
            color: white !Important;
            background-color: #25587E !important;
            border: 1px solid #25587E !important;
        }
    </style>
</head>
<body>
    <div style="background-image: url('images/uganc-logo.png');
        width: 100%;
        height: 100px">
        <img src="~/images/uganc-logo.png" />
    </div>
    <div class="container-fluid" style="height:95%">
        <main role="main" class="pb-3">
            @RenderBody()
            <div class="container-fluid" style="height:100%">
                <div class="row" style="height:100%">
                    @RenderSection("container", required: true)
                    <div class="col-xl-3" style="height:auto">
                        <div class="card h-100">
                            <div class="card-header" style="background-color: #25587E;color: white; height:55px">
                                <div>
                                    @{
                                        var path = "/profiles/" + @HttpContextAccessor.HttpContext.Session.GetString("ProfilePath");
                                    }
                                    <a asp-action="UpdateStudentProfile" asp-controller="Administration">
                                        <img src="@path" width="100" height="100" style="border-radius: 50%; margin-left: 38%; border: 1px solid #BEBEBE" />
                                    </a>
                                    <h6 style="text-align: center; color: #150517 ">@HttpContextAccessor.HttpContext.Session.GetString("UserLastName")</h6>
                                    <h6 style="text-align: center; color: #150517">@HttpContextAccessor.HttpContext.Session.GetString("UserFirstName")</h6>
                                </div>
                                @RenderSection("leftPanelHeader", required: true)
                            </div>
                            <div class="card-body" style="margin-top:80px">
                                <div>
                                    <a class="aheader" asp-controller="Account" asp-action="Logout">Deconnexion</a><br />
                                    <a class="aheader" asp-controller="Student" asp-action="Home">Zone Reservée</a><br />
                                    <a class="aheader" href="#">Autres Carrières</a><br />
                                    <a class="aheader" asp-controller="Account" asp-action="ChangePassword">Changer mot de passe</a><br />
                                    <a class="aheader" href="#">@HttpContextAccessor.HttpContext.Session.GetString("Email")</a>
                                </div>
                                <br />
                                @RenderSection("leftPanelBody", required: true)
                                <table class="table" style="font-size: 10pt; margin-top: 10px; color:#250517">
                                    <tbody>
                                        <tr class="tr">
                                            <td class="td" scope="row"> <a class="a" asp-controller="Student" asp-action="Home">Home</a></td>
                                        </tr>
                                        <tr class="tr">
                                            <td class="td" scope="row"> <a class="a" asp-controller="Booklet" asp-action="Index">Livret Etudiant</a></td>
                                        </tr>
                                        <tr class="tr">
                                            <td class="td" scope="row"><a class="a" asp-controller="Administration" asp-action="ExamListForStudent">Appels d'Examens</a></td>
                                        </tr>
                                        <tr class="tr">
                                            <td class="td" scope="row"><a class="a" asp-controller="Administration" asp-action="StudentDepartment">Mon Département</a></td>
                                        </tr>
                                        <tr class="tr">
                                            <td class="td" scope="row"> <a class="a" asp-controller="Administration" asp-action="StudentDolly">Didactique en ligne</a></td>
                                        </tr>
                                        <tr class="tr">
                                            <td class="td" scope="row"> <a class="a" asp-controller="Administration" asp-action="CourseProgram">Programme d'Etudes</a></td>
                                        </tr>
                                        <tr class="tr">
                                            <td class="td" scope="row"><a class="a" asp-controller="Administration" asp-action="StudentEnrollment">Inscription</a></td>
                                        </tr>
                                        <tr class="tr">
                                            <td class="td" scope="row"> <a class="a" asp-controller="Administration" asp-action="Graduation">Optention Titres</a></td>
                                        </tr>
                                        <tr class="tr">
                                            <td class="td" scope="row"> <a class="a" asp-controller="Administration" asp-action="PartialTest">Epreuves Partielles</a></td>
                                        </tr>
                                        <tr class="tr">
                                            <td class="td" scope="row"> <a class="a" asp-controller="Administration" asp-action="Fees">Taxes</a></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-9" style="height:auto">
                        <div class="card h-100">
                            <div class="card-header my-auto" style="background-color:#25587E; color:white; height:55px;">
                                <span style="font-size:15pt;">Zone réservée de l'étudiant </span><span style="font-size:15pt;">@HttpContextAccessor.HttpContext.Session.GetString("UserFirstName") @HttpContextAccessor.HttpContext.Session.GetString("UserLastName") @{@ViewBag.LastName}-[MAT.@HttpContextAccessor.HttpContext.Session.GetString("SerialNumber")]</span>
                                @RenderSection("middlePanelHeader", required: true)
                            </div>
                            <div class="card-body">
                                <span style="font-size:18pt; font-weight:bold; color:red; font-family:'The lazy dog'">Direction du service pour les étudiants - Services Didactiques</span>
                                <br />
                                <span style="color:black; font-size:15pt; font-family:'The lazy dog'; border-bottom:5px solid red">ESSE4</span>
                                <br />
                                <br />
                                @RenderSection("middlePanelBody", required: true)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - Gamal - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
