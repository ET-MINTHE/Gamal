@model Gamal.ViewModel.UniversityFeeViewModel
@{
    ViewData["Title"] = "AddFeePaymentExpiration";
    Layout = "~/Views/Shared/_Secretary.cshtml";
}

@section container{

}

@section leftPanelHeader{

}

@section leftPanelBody
{

}

@section middlePanelHeader{
}

@section middlePanelBody
{
	<span style="font-size: 15pt;color: #054e77">Gestion des taxes universitaires</span>
    <br />
    <br />
    <div class="row">
        <div class="col-md-11">
			  <form method="post">
					 <span style="font-size: 12pt;color: #054e77">Inserer les dates limites de payement des taxes</span>
			  		 @if (!String.IsNullOrEmpty(@ViewBag.Error))
					 {
					  <br />
			  		    <span style="color:red; font-weight:bold">@ViewBag.Error</span>
			       }
				   @if (!String.IsNullOrEmpty(@ViewBag.Message))
				   {    <br />
			  		     <span style="color:green; font-weight:bold">@ViewBag.Message</span>
			      }
				  <div class="form-group">
			  		<label asp-for="AcademicYear" style="float:left; color:#054e77"></label>
			  		<input asp-for="AcademicYear" class="form-control fr-date-datepicker" placeholder="inserer l'année accademique de dé gg/mm/aaaa">
			  		<span asp-validation-for="AcademicYear" class="text-danger"></span>
				  </div>
				  <div class="form-group">
			  		<label asp-for="StartDate" style="float:left; color:#054e77"></label>
			  		<input asp-for="StartDate" class="form-control fr-date-datepicker" placeholder="inserer la date de début gg/mm/aaaa">
			  		<span asp-validation-for="StartDate" class="text-danger"></span>
				  </div>
				  <div class="form-group">
			  		<label asp-for="ExpirationDate" style="float:left; color:#054e77"></label>
			  		<input asp-for="ExpirationDate" class="form-control fr-date-datepicker" placeholder="inserer la date d'expiration gg/mm/aaaa">
			  		<span asp-validation-for="ExpirationDate" class="text-danger"></span>
				  </div>
				  <div class="form-group">
			  		<input asp-for="Ammount" placeholder="Inserer la somme" class="form-control" />
			  		<span asp-validation-for="Ammount" class="text-danger"></span>
				  </div>
				  <div class="form-group">
			  		<label asp-for="Description" style="float:left; color:#054e77"></label>
			  		<textarea asp-for="Description" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
				  </div>
				  <button type="reset" name="button" value="first" class="btn1 btn btn-primary" style="float:left;">Effacer</button>
				  <button type="submit" name="button" value="second" class="btn1 btn btn-primary" style="float:right">Enregistrer</button>
			  </form>
           <br/>
        </div>
    </div>
}

