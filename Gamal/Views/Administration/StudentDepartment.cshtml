@model Gamal.ViewModel.StudentDepartmentViewModel
@{
    ViewData["Title"] = "StudentDepartment";
    Layout = "~/Views/Shared/_Student.cshtml";
}


@section UserFirstName{
    @ViewBag.FirstName
}

@section UserLastName{
    @ViewBag.LastName
}

@section container{

}

@section leftPanelHeader{

}

@section leftPanelBody
{

}

@section middlePanelHeader{
    <span style="font-size:22pt;">Zone réservée de l'étudiant </span><span style="font-size:20pt;">@{@ViewBag.FirstName} @{@ViewBag.LastName}-[MAT. @ViewBag.SerialNumber]</span>
    <br />
    <br />
}

@section middlePanelBody
{
    <span style="font-size:12pt;">
       Informations relatives à mon département
    </span>
    <br />
    <br />
    <fieldset class="border p-3" style="border:3px solid red">
        <legend class="w-auto" style="font-size:18pt; font-weight:bold; border-bottom: 5px solid red">@Model.Department</legend>
        <table class="table">
            <tbody>
                <tr class="td1">
                    <th scope="col"><span style="color:#150517">Départment</span></th>
                    <td scope="col">@Model.Department</td>
                </tr>
                <tr class="td1">
                    <th><span style="color:#150517">Code du Département</span></th>
                    <td>@Model.DepartmentCode</td>
                </tr>
                <tr class="td1">
                    <th><span style="color:#150517">Faculté</span></th>
                    <td>@Model.Faculty</td>
                </tr>
                <tr class="td1">
                    <th><span style="color:#150517">Code Faculté</span></th>
                    <td>@Model.FacultyCode</td>
                </tr>
                <tr class="td1">
                    <th><span style="color:#250517">Année d'Inscription</span></th>
                    <td>@Model.EnrollmentYeart</td>
                </tr>
                <tr class="td1">
                    <th><span style="color:#250517">Type de Cours</span></th>
                    <td>@Model.CourseType</td>
                </tr>
                <tr class="td1">
                    <th><span style="color:#250517">Crédit</span></th>
                    <td>@Model.Credit</td>
                </tr>
            </tbody>
        </table>
    </fieldset>
    <br />
}

