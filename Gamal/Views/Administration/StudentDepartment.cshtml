@model Gamal.ViewModel.StudentDepartmentViewModel
@{
    ViewData["Title"] = "StudentDepartment";
    Layout = "~/Views/Shared/_Student.cshtml";
}

@section container{

}

@section leftPanelHeader{

}

@section leftPanelBody
{

}

@section middlePanelHeader{
}

@section middlePanelBody
{
    <span style="font-size: 14pt; color: #054e77">
       Informations relatives à mon département
    </span>
    <br />
    <br />
    <fieldset class="border p-3">
        <legend class="w-auto" style="font-size:14pt; float:left; color:#054e77; font-weight:bold; border-bottom: 5px solid #ff5733">@Model.Department</legend>
        <table class="table">
            <tbody>
                <tr class="td1">
                    <td scope="col"><span style="color:#054e77; float:left">Départment</span></td>
                    <td scope="col"><span style="float:left; color:#054e77"> @Model.Department</span></td>
                </tr>
                <tr class="td1">
                    <td><span style="color:#054e77; float:left">Code du Département</span></td>
                    <td scope="col">
                        <span style="float:left; color:#054e77"> @Model.DepartmentCode</span>
                    </td>
                </tr>
                <tr class="td1">
                    <td><span style="float:left; color:#054e77">Faculté</span></td>
                    <td><span style="float:left; color:#054e77"> @Model.Faculty</span></td>
                </tr>
                <tr class="td1">
                    <td><span style="float:left; color:#054e77">Code Faculté</span></td>
                    <td><span style="float:left; color:#054e77">@Model.FacultyCode</span></td>
                </tr>
                <tr class="td1">
                    <td><span style="float:left; color:#054e77">Année d'Inscription</span></td>
                    <td><span style="float:left; color:#054e77">@Model.EnrollmentYear</span></td>
                </tr>
                <tr class="td1">
                    <td><span style="float:left; color:#054e77">Type de Cours</span></td>
                    <td><span style="float:left; color:#054e77">@Model.CourseType</span> </td>
                </tr>
                <tr class="td1">
                    <td><span style="float:left; color:#054e77">Crédit</span></td>
                    <td><span style="float:left; color:#054e77">@Model.Credit</span> </td>
                </tr>
            </tbody>
        </table>
    </fieldset>
    <br />
}

