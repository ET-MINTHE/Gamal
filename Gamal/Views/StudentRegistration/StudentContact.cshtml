@model Gamal.ViewModel.StudentContactViewModel
@{
    ViewData["Title"] = "StudentContact";
    Layout = "~/Views/Shared/_Secretary.cshtml";
}

@section container{

}

@section leftPanelHeader{
}

@section leftPanelBody
{

}

@section middlePanelHeader{
}

@section middlePanelBody{
    <br />
    <div>
        <div class="card">
            <div align="center">
                <span style="font-size: 15pt;color: #054e77;">Inscription des Etudiants</span>
                <div class="row align-items-center align-self-center justify-content-center" style="padding:0px">
                    <div class=" col-sm-4 col-lg-4" style="padding:0px">
                        <div class="card h-25 w-25" style="background-color:#25587E; padding:0px">
                            <div class="card-body" style="padding:0px">
                                <span style="font-size:15pt; color:white; font-weight:bold; font-family:'Times New Roman'">Phase 2/4</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <br />
            <div class="row" style="padding-left:7%">
                <div class="col-md-11">
                    <form method="post">
                        <div class="form-group">
                            <input asp-for="Address" placeholder="Inserer l'adresse" class="form-control" />
                            <span asp-validation-for="Address" class="text-danger" style="float:left"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="PhoneNumber" placeholder="Inserer le numero de téléphone" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger" style="float:left"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="CityOfResidence" placeholder="Inserer la ville de residence" class="form-control" />
                            <span asp-validation-for="CityOfResidence" class="text-danger" style="float:left"></span>
                        </div>
                        <button type="submit" name="button" value="first" class="btn1 btn btn-primary" style="float:left">Precedent</button>
                        <button type="submit" name="button" value="second" class="btn1 btn btn-primary" style="float:right">Suivant</button>
                    </form>
                    <br />
                    <br />
                </div>
            </div>
        </div>
    </div>
}

