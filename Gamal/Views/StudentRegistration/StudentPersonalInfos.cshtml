@model Gamal.ViewModel.StudentPersonalInfoViewModel

@{
    ViewData["Title"] = "StudentPersonalInfor";
    Layout = "~/Views/Shared/_Secretary.cshtml";
}

@section container{

}

@section leftPanelHeader{

}
@section leftPanelBody
{
}

@section middlePanelHeader{
}

@section middlePanelBody
{   <br />
    <div style="">
        <div class="card">
            <div align="center">
                <span style="font-size:15pt;color: #054e77">Inscription des Etudiants</span>
                <div class="row align-items-center align-self-center justify-content-center" style="padding:0px">
                    <div class=" col-sm-4 col-lg-4" style="padding:0px">
                        <div class="card h-25 w-25" style="background-color:#25587E; padding:0px">
                            <div class="card-body" style="padding:0px">
                                <span style="font-size:15pt; color:white; font-weight:bold; font-family:'Times New Roman'">Phase 1/4</span>
                            </div>
                        </div>
                    </div>
                </div>
                @if (!String.IsNullOrEmpty(@ViewBag.ErrorMessage))
                {
                    <span style="font-size:15pt; color:red">@ViewBag.ErrorMessage</span><br />
                }
            </div>
            <br />
            <div class="row" style="padding-left:7%">
                <div class="col-md-11">
                    <form method="post">
                        <div class="form-group">
                            <input asp-for="FirstName" placeholder="Inserer le prénom" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger" style="float:left"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="LastName" placeholder="Inserer le nom" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger" style="float:left"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Email" placeholder="Inserer l'adresse electronique" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger" style="float:left"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="CityOfBirth" placeholder="Inserer la ville de naissance" class="form-control" />
                            <span asp-validation-for="CityOfBirth" class="text-danger" style="float:left"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Nationality" placeholder="Inserer la nationalité" class="form-control" />
                            <span asp-validation-for="Nationality" class="text-danger" style="float:left"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DateOfBirth" style="float:left"></label>
                            <input asp-for="DateOfBirth" class="form-control fr-date-datepicker" placeholder="inserisci la data in formato gg/mm/aaaa">
                            <span asp-validation-for="DateOfBirth" class="text-danger" style="float:left"></span>
                        </div>
                        <button disabled type="submit" name="button" value="first" class="btn1 btn btn-primary" style="float:left">Precedent</button>
                        <button type="submit" name="button" value="second" class="btn1 btn btn-primary" style="float:right">Suivant</button>
                    </form>
                    <br />
                    <br />
                </div>
            </div>
        </div>
    </div>
}

