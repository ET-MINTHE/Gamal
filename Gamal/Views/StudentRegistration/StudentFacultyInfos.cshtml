@model Gamal.ViewModel.StudentFacultyViewModel
@{
    ViewData["Title"] = "StudentFacultyInfos";
    Layout = "~/Views/Shared/_Secretary.cshtml";
}


@section container{

}
@section UserFirstName{
    @ViewBag.FirstName
}

@section UserLastName{
    @ViewBag.LastName
}
@section leftPanelHeader{

}

@section leftPanelBody
{
}

@section middlePanelHeader{
    <span style="font-size:20pt;">Zone réservée du secrétaire </span><span style="font-size:20pt;">@{@ViewBag.FirstName} @{@ViewBag.LastName}-[MAT. @ViewBag.SerialNumber]</span>
    <br />
}

@section middlePanelBody
{
    <br />
    <span style="color:red">
        @ViewBag.ErrorMessage
    </span>
    <div style="">
        <div class="card">
            <div style="text-align:center">
                <span style="font-size:18pt; font-weight:bold; color:red">Processus d'Immatriculation des Etudiants</span>
                <br />
                <span style="font-weight:bold">Informations du département de la faculté</span>
            </div>
            <br />
            <div class="row" style="padding-left:7%">
                <div class="col-md-11">
                    <form method="post">
                        <div class="form-group">
                            <input asp-for="SerialNumber" class="form-control fr-date-datepicker" placeholder="Inserer le numero de matricule">
                            <span asp-validation-for="SerialNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <select id="FacultyId" asp-for="Faculty" class="form-control" asp-items="Model.AllFaculties">
                                <option value="">Select Faculty</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <select id="DepartementId" asp-for="Department" class="form-control" asp-items="Model.AllDepartments">
                                <option value="">Select Department</option>
                            </select>
                        </div>
                        <div class="form-group">
                            @Html.DropDownListFor(model => model.StudentProfile, Model.StudentProfiles as SelectList, "Selectioner le profile de l'étudiant", new { @class = "form-control" })
                            <span asp-validation-for="StudentProfile" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            @Html.DropDownListFor(model => model.CurrentYear, Model.AllCurrentYears as SelectList, "Selectioner l'année courante", new { @class = "form-control" })
                            <span asp-validation-for="CurrentYear" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            @Html.DropDownListFor(model => model.PartTime, Model.PartTimes as SelectList, "Etudiant PartTime", new { @class = "form-control" })
                            <span asp-validation-for="PartTime" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="YearOfEnrolement"></label>
                            <input asp-for="YearOfEnrolement" class="form-control fr-date-datepicker" placeholder="Inserer l'année d'inscription">
                            <span asp-validation-for="YearOfEnrolement" class="text-danger"></span>
                        </div>
                        <button type="submit" name="button" value="first" class="btn1 btn btn-primary">Precedent</button>
                        <button type="submit" name="button" value="second" class="btn1 btn btn-primary" style="float:right">Suivant</button>
                    </form>
                    <br />
                </div>
            </div>
        </div>
    </div>
}

@section Scripts{

    <script src="~/lib/jquery/jquery.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#FacultyId').change(function () {
                $.get("/StudentRegistration/GetDepartmentById", { facultyCode: $('#FacultyId').val() }, function (data) {
                    $('#DepartementId').empty();
                    for (var i = 0; i < data.length; i++) {
                        $('#DepartementId').append('< option value = "" >' + data[i] + '</option >');
                        $('#DepartementId').append($('<option></option>').val(data[i]).html(data[i]));
                    }
                });
            });
        });
    </script>
}

