@model Gamal.ViewModel.ResetPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_EmptyView.cshtml";
}
<header>
    <nav style="height:80px; border-bottom:8px solid #BEBEBE; background-color:#F8F8F8" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light box-shadow mb-3">
        <div class="container" align="left">
            <p><span style="font-size: 25pt; color: red; font-weight: bold">UGANC</span> <span style="margin-left:12px; font-size:25pt;">Université Gamal Abdel Nasser de Conakry</span></p>
        </div>
    </nav>
</header>
<br />
<br />
<div style="align-content:center; width:50%; margin-left:25%;">
    <span style="color:black; font-size:18pt; text-align:center"> REINITIALISATION DE VOTRE MOT DE PASSE</span>
</div>
<br />
<br />
<div class="card" style="width:50%; margin-left:25%;">
    <div class="card-body">
        <form method="post">
            <input asp-for="Token" type="hidden" />
            <input asp-for="Email" type="hidden" />
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control fr-date-datepicker" placeholder="Inserer le mot de passe">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control fr-date-datepicker" placeholder="Inserer le mot de passe">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" name="button" value="second" class="btn1 btn btn-primary" style="float:right">Réinitialiser</button>
        </form>
    </div>
</div>

   