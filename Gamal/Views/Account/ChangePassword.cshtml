@model Gamal.ViewModel.ChangePasswordViewModel
@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/_EmptyView.cshtml";
}
<span style="color:red">
    @ViewBag.Error
</span>
<br />
<div style="width:100%; margin-top:150px">
    <div class="card w-50" style="margin-left:25%">
        <div class="card-header" style="text-align:center; background-color:#25587E">
            <span style="color: white; font-size: 18pt">Changer votre mot de passe</span>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="form-group">
                    <input asp-for="CurrentPassword" placeholder="Mot de passe actuel" class="form-control" />
                    <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="NewPassword" placeholder="Nouveau mot de passe" class="form-control" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="ConfirmPassword" placeholder="Confirmer mot de passe" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" name="button" value="second" class="btn btn-primary" style="float:right; background-color:#25587E">Changer</button>
            </form>
        </div>
    </div>
</div>
   