@model Gamal.ViewModel.BookletViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Student.cshtml";
}

@section UserFirstName{
    @ViewBag.FirstName
}

@section UserLastName{
    @ViewBag.LastName
}

@section container{

}

@section leftPanelHeader{

}

@section leftPanelBody
{

}

@section middlePanelHeader{
    <span style="font-size:22pt;">Zone réservée de l'étudiant </span><span style="font-size:20pt;">@{@ViewBag.FirstName} @{@ViewBag.LastName}-[MAT. @ViewBag.SerialNumber]</span>
    <br />
}

@section middlePanelBody
{
    <span style="font-size:12pt; font-weight:bold">Détail de carrière de:</span> <span style="font-size:12pt; font-weight:bold; color:red">@{@ViewBag.FirstName} @{@ViewBag.LastName}-[MAT. @ViewBag.SerialNumber]</span>
    <br />

    <span style="font-size:12pt; color:#150517; text-align:justify">
        La section contient les informations de l'activité didactique incluses dans le livret de l'étudiant ainsi que les informations associées aux secteurs disciplinaires scientifiques avec les fréquences relatives effectuées.
    </span>
    <br />
    <br />
    <span style="font-size:12pt; font-weight:bold">Activité Didactique:</span> <span style="font-size:12pt; font-weight:bold; color:red">@Model.Course</span>
    <br />
    <span style="font-size:12pt; font-weight:bold"> Cours offert au département:</span> <span style="font-weight:bold; font-size:12pt; color:red">@Model.DepartmentName</span>
    <br />
    <fieldset class="border p-3" style="border:3px solid red">
        <legend class="w-auto" style="font-size:14pt; font-weight:bold; border-bottom: 5px solid red">Activité Didactique</legend>
        <table class="table">
            <tbody>
                <tr class="td1">
                    <td scope="col"><span style="font-weight:bold; color:#150517">Année</span></td>
                    <td scope="col">@Model.Year</td>
                </tr>
                <tr class="td1">
                    <td><span style="font-weight:bold; color:#150517">Etat</span></td>
                    <td>
                        @if (Model.Status == true)
                        {
                            <span style="font-weight:bold; color:#150517">Examen passé avec succès</span>
                        }
                        else
                        {
                            <span style="font-weight:bold; color:#150517">Examen à passer</span>
                        }
                    </td>
                </tr>
                <tr class="td1">
                    <td><span style="font-weight:bold; color:#150517">Date de l'Examen</span></td>
                    <td>
                        @if (@Model.ExamDate == null)
                        {
                            <span>AAAA</span>
                        }
                        else
                        {
                            <span>@Model.ExamDate</span>
                        }
                    </td>
                </tr>
                <tr class="td1">
                    <td><span style="font-weight:bold; color:#150517">Note</span></td>
                    <td>
                        @if (@Model.ExamDate == null)
                        {
                            <span>Examen à passer</span>
                        }
                        else
                        {
                            <span>@Model.Mark</span>
                        }
                    </td>
                </tr>
                <tr class="td1">
                    <td><span style="font-weight:bold; color:#250517">Description</span></td>
                    <td> @Model.Description</td>
                </tr>
            </tbody>
        </table>
    </fieldset>
    <br />
    <span> Unité Didactique</span>
    <br />
    <br />
    <table class="table table-bordered">
        <thead class="thead-light">
            <tr class="td1">
                <th scope="col">Unité Didactique</th>
                <th>Type d'Activité</th>
                <th>Secteur</th>
                <th>Coefficient</th>
                <th>Durée</th>
            </tr>
        </thead>
        <tbody>
            <tr class="td1">
                <td>@Model.Course</td>
                <td>A definir</td>
                <td>@Model.Sector</td>
                <td>@Model.Weight</td>
                <td>@Model.Length</td>
            </tr>
        </tbody>
    </table>
}


