@model List<Gamal.ViewModel.ExamSessionViewModel>
@{
	ViewData["Title"] = "ExamSessionList";
	Layout = "~/Views/Shared/_Secretary.cshtml";
}

@section container{

}

@section leftPanelHeader{

}

@section leftPanelBody
{

}

@section middlePanelHeader{
}

@section middlePanelBody
{
	<span style="font-size: 15pt;color: #054e77">Gestopm des Sessions d'examens</span>
	<br />
	<span style="font-size: 14pt;color: #054e77">Liste des sessions d'examens</span>
	<br />
	<br />
	@if (Model.Count != 0)
	{
		<table class="table table-bordered">
			<thead>
				<tr style="background-color:#e9ecef; color:#054e77">
					<th scope="col" >Nom della Session</th>
					<th scope="col" >Date de debut Session</th>
					<th scope="col" >Date fin de Session</th>
					<th scope="col" >Description de la Session</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td scope="row" style="color:#054e77">@item.Name</td>
						<td scope="row" style="color:#054e77">@item.Start</td>
						<td scope="row" style="color:#054e77"> @item.End</td>
						<td scope="row" style="color:#054e77"> @item.Description</td>
					</tr>
				}
			</tbody>
		</table>
		}
	}

